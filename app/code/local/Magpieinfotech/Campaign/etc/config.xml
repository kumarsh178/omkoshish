<?xml version="1.0"?>
<config>
  <modules>
    <Magpieinfotech_Campaign>
      <version>0.1.0</version>
    </Magpieinfotech_Campaign>
  </modules>
  <frontend>
    <routers>
      <campaign>
        <use>standard</use>
          <args>
            <module>Magpieinfotech_Campaign</module>
            <frontName>campaign</frontName>
          </args>
      </campaign>
    </routers>
		<layout>
		  <updates>
			<campaign>
			  <file>campaign.xml</file>
			</campaign>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <campaign>
        <class>Magpieinfotech_Campaign_Helper</class>
      </campaign>
    </helpers>
	<blocks>
	  <campaign>
		<class>Magpieinfotech_Campaign_Block</class>
	  </campaign>
	</blocks>
	<models>
	  <campaign>
		<class>Magpieinfotech_Campaign_Model</class>
		<resourceModel>campaign_mysql4</resourceModel>
	  </campaign>
	  <campaign_mysql4>
		<class>Magpieinfotech_Campaign_Model_Mysql4</class>
		<entities>		  
			  <campaign>
				<table>campaign</table>
			  </campaign>
        </entities>
	  </campaign_mysql4>
	</models>
	<resources>
	  <campaign_setup>
		<setup>
		  <module>Magpieinfotech_Campaign</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </campaign_setup>
	  <campaign_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </campaign_write>
	  <campaign_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </campaign_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <campaign>
	    <use>admin</use>
		<args>
		  <module>Magpieinfotech_Campaign</module>
		  <frontName>admin_campaign</frontName>
		</args>
	  </campaign>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <campaign module="campaign">
		<title>Campaign</title>
		<sort_order>100</sort_order>
		<children>
		  <campaign module="campaign">
		    <title>Manage Campaign</title>
			<sort_order>0</sort_order>
			<action>admin_campaign/adminhtml_campaign</action>
		  </campaign>
		</children>
	  </campaign>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<campaign translate="title" module="campaign">
			  <title>Campaign</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <campaign translate="title">
			<title>Manage Campaign</title>
			<sort_order>0</sort_order>
		  </campaign>
			  </children>
			</campaign>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<campaign>
		  <file>campaign.xml</file>
		</campaign>
	  </updates>
	</layout>
  </adminhtml>
</config> 