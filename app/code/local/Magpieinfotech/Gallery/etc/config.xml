<?xml version="1.0"?>
<config>
  <modules>
    <Magpieinfotech_Gallery>
      <version>0.1.0</version>
    </Magpieinfotech_Gallery>
  </modules>
  <frontend>
    <routers>
      <gallery>
        <use>standard</use>
          <args>
            <module>Magpieinfotech_Gallery</module>
            <frontName>gallery</frontName>
          </args>
      </gallery>
    </routers>
		<layout>
		  <updates>
			<gallery>
			  <file>gallery.xml</file>
			</gallery>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <gallery>
        <class>Magpieinfotech_Gallery_Helper</class>
      </gallery>
    </helpers>
	<blocks>
	  <gallery>
		<class>Magpieinfotech_Gallery_Block</class>
	  </gallery>
	</blocks>
	<models>
	  <gallery>
		<class>Magpieinfotech_Gallery_Model</class>
		<resourceModel>gallery_mysql4</resourceModel>
	  </gallery>
	  <gallery_mysql4>
		<class>Magpieinfotech_Gallery_Model_Mysql4</class>
		<entities>		  
			  <gallery>
				<table>gallery</table>
			  </gallery>
        </entities>
	  </gallery_mysql4>
	</models>
	<resources>
	  <gallery_setup>
		<setup>
		  <module>Magpieinfotech_Gallery</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </gallery_setup>
	  <gallery_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </gallery_write>
	  <gallery_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </gallery_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <gallery>
	    <use>admin</use>
		<args>
		  <module>Magpieinfotech_Gallery</module>
		  <frontName>admin_gallery</frontName>
		</args>
	  </gallery>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <gallery module="gallery">
		<title>Gallery</title>
		<sort_order>100</sort_order>
		<children>
		  <gallery module="gallery">
		    <title>Manage Gallery</title>
			<sort_order>0</sort_order>
			<action>admin_gallery/adminhtml_gallery</action>
		  </gallery>
		</children>
	  </gallery>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<gallery translate="title" module="gallery">
			  <title>Gallery</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <gallery translate="title">
			<title>Manage Gallery</title>
			<sort_order>0</sort_order>
		  </gallery>
			  </children>
			</gallery>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<gallery>
		  <file>gallery.xml</file>
		</gallery>
	  </updates>
	</layout>
  </adminhtml>
</config> 